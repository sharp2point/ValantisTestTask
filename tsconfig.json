{
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ],
    "paths": {
      "@/*": [
        "src/*",
        "styles/*"
      ]
    },
    "compilerOptions": {
        "target": "ES2022",
        "module": "esnext",
        "isolatedModules": true,
         "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
    }
}